<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/answerDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/zeroBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="50dp"
        android:onClick="digitBtnHandler"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/period"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="50dp"
        android:onClick="digitBtnHandler"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zeroBtn" />

    <Button
        android:id="@+id/clear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:onClick="digitBtnHandler"
        android:text="Clear"
        app:layout_constraintBottom_toTopOf="@+id/sevenBtn"
        app:layout_constraintEnd_toEndOf="@+id/divideBtn"
        app:layout_constraintStart_toStartOf="@+id/sevenBtn" />

    <Button
        android:id="@+id/oneBtn"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:onClick="digitBtnHandler"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/zeroBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/twoBtn"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="20dp"
        android:onClick="digitBtnHandler"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/period"
        app:layout_constraintStart_toEndOf="@+id/oneBtn" />

    <Button
        android:id="@+id/threeBtn"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="20dp"
        android:onClick="digitBtnHandler"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/period"
        app:layout_constraintStart_toEndOf="@+id/twoBtn" />

    <Button
        android:id="@+id/fourBtn"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:onClick="digitBtnHandler"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/oneBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/fiveBtn"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="20dp"
        android:onClick="digitBtnHandler"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/twoBtn"
        app:layout_constraintStart_toEndOf="@+id/fourBtn" />

    <Button
        android:id="@+id/sixBtn"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="20dp"
        android:onClick="digitBtnHandler"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/threeBtn"
        app:layout_constraintStart_toEndOf="@+id/fiveBtn" />

    <Button
        android:id="@+id/sevenBtn"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:onClick="digitBtnHandler"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/fourBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/eightBtn"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="20dp"
        android:onClick="digitBtnHandler"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/fiveBtn"
        app:layout_constraintStart_toEndOf="@+id/sevenBtn" />

    <Button
        android:id="@+id/nineBtn"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="20dp"
        android:onClick="digitBtnHandler"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/sixBtn"
        app:layout_constraintStart_toEndOf="@+id/eightBtn" />

    <Button
        android:id="@+id/plusBtn"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="digitBtnHandler"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/solveBtn"
        app:layout_constraintStart_toEndOf="@+id/threeBtn" />

    <Button
        android:id="@+id/minusBtn"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:onClick="digitBtnHandler"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/solveBtn"
        app:layout_constraintStart_toEndOf="@+id/plusBtn" />

    <Button
        android:id="@+id/multiplyBtn"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:onClick="digitBtnHandler"
        android:text="*"
        app:layout_constraintStart_toEndOf="@+id/sixBtn"
        app:layout_constraintTop_toTopOf="@+id/nineBtn" />

    <Button
        android:id="@+id/solveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="50dp"
        android:onClick="digitBtnHandler"
        android:text="Solve"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/period" />

    <Button
        android:id="@+id/divideBtn"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:onClick="digitBtnHandler"
        android:text="/"
        app:layout_constraintStart_toEndOf="@+id/multiplyBtn"
        app:layout_constraintTop_toTopOf="@+id/nineBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>